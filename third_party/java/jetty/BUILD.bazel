load(":repack.bzl", "repack_jars")
load("//java:maven.bzl", "java_export")
load("//third_party/java:rules.bzl", "maven_java_import")

licenses(["notice"])

package(default_visibility = ["//visibility:public"])

JETTY_VERSION = "9.4.19.v20190610"

java_export(
    name = "jetty",
    maven_coordinates = "org.seleniumhq.selenium:jetty-repacked:%s" % JETTY_VERSION,
    pom_template = "jetty.pom",
    exports = [":repackage"],
    runtime_deps = [
        "//third_party/java/servlet:javax.servlet-api",
    ],
)

# We want the deployable 'jetty-repacked' artifact to not require each of the
# individual jars (we did, after all, repackage everything). By introducing a
# maven_java_import we avoid that problem.
java_import(
    name = "repackage",
    jars = [":strip-services"],
    visibility = ["//visibility:private"],
)

genrule(
    name = "strip-services",
    srcs = [":bundle-jars_deploy.jar"],
    outs = ["stripped-bundle.jar"],
    cmd = "cp $< $@ && chmod +w $@ && $(location //java/client/src/org/openqa/selenium/tools:DeleteFromZip) $@ META-INF/services",
    tools = ["//java/client/src/org/openqa/selenium/tools:DeleteFromZip"],
    visibility = ["//visibility:private"],
)

java_binary(
    name = "bundle-jars",
    visibility = ["//visibility:private"],
    runtime_deps = [
        ":jetty-http-repacked",
        ":jetty-io-repacked",
        ":jetty-jmx-repacked",
        ":jetty-security-repacked",
        ":jetty-server-repacked",
        ":jetty-servlet-repacked",
        ":jetty-util-repacked",
        ":jetty-xml-repacked",
    ],
)

repack_jars(
    JETTY_VERSION,
    [
        "jetty-client",
        "jetty-http",
        "jetty-io",
        "jetty-jmx",
        "jetty-security",
        "jetty-server",
        "jetty-servlet",
        "jetty-util",
        "jetty-xml",
    ],
)

filegroup(
    name = "jarjar-rules",
    srcs = ["jetty-repack-rules"],
)

maven_java_import(
    name = "jetty-client",
    coords = "org.eclipse.jetty:jetty-client:jar:9.4.19.v20190610",
    jar = "jetty-client-9.4.19.v20190610.jar",
    srcjar = "jetty-client-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-http",
        ":jetty-io",
    ],
)

maven_java_import(
    name = "jetty-http",
    coords = "org.eclipse.jetty:jetty-http:jar:9.4.19.v20190610",
    jar = "jetty-http-9.4.19.v20190610.jar",
    srcjar = "jetty-http-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-io",
        ":jetty-util",
    ],
)

maven_java_import(
    name = "jetty-io",
    coords = "org.eclipse.jetty:jetty-io:jar:9.4.19.v20190610",
    jar = "jetty-io-9.4.19.v20190610.jar",
    srcjar = "jetty-io-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-util",
    ],
)

maven_java_import(
    name = "jetty-jmx",
    coords = "org.eclipse.jetty:jetty-jmx:jar:9.4.19.v20190610",
    jar = "jetty-jmx-9.4.19.v20190610.jar",
    srcjar = "jetty-jmx-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-util",
    ],
)

maven_java_import(
    name = "jetty-security",
    coords = "org.eclipse.jetty:jetty-security:jar:9.4.19.v20190610",
    jar = "jetty-security-9.4.19.v20190610.jar",
    srcjar = "jetty-security-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-server",
    ],
)

maven_java_import(
    name = "jetty-server",
    coords = "org.eclipse.jetty:jetty-server:jar:9.4.19.v20190610",
    jar = "jetty-server-9.4.19.v20190610.jar",
    srcjar = "jetty-server-9.4.19.v20190610-sources.jar",
    deps = [
        ":jetty-http",
        ":jetty-io",
        ":jetty-jmx",
        "//third_party/java/servlet:javax.servlet-api",
    ],
