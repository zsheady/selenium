maven_java_import(
    name = "jetty-servlet",
    coords = "org.eclipse.jetty:jetty-servlet:jar:9.4.19.v20190610",
    jar = "jetty-servlet-9.4.19.v20190610.jar",
    srcjar = "jetty-servlet-9.4.19.v20190610-sources.jar",
    deps = [
