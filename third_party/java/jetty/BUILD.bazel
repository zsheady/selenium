    coords = "org.eclipse.jetty:jetty-util:jar:9.4.19.v20190610",
    jar = "jetty-util-9.4.19.v20190610.jar",
    srcjar = "jetty-util-9.4.19.v20190610-sources.jar",
    deps = [
        "//third_party/java/servlet:javax.servlet-api",
    ],
